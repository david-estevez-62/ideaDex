							label Username:
							input.loginusername(type="text", name="username", placeholder="username")
						div.form1
							label Password:
							input.loginpassword1(type="text", name="password", placeholder="password")
						p
						p
							input.loginbtn1(type="submit", value="Sign in", placeholder='Sign in')
				p
				div
					button
						a.loginbtn2(href="/createacct") Sign Up
				div
					span forgot username?
						button.chgusr
							a(href="/changeUsername") Reset Username
				div
					span forgot password?
						button.chgpw
							a(href="/changePassword") Reset Password
